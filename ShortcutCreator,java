    private void createActionPerformed(java.awt.event.ActionEvent evt) {                                       

        if (icophoto.getText().equals("")) {
            JOptionPane.showMessageDialog(null, "You must choose an icon first", "Code 13 duh!", 1);
        } else {

            JFileChooser find = new JFileChooser(icophoto.getText());
            int location = find.showOpenDialog(this);

            if (location == JFileChooser.APPROVE_OPTION) {
                File folder = find.getCurrentDirectory();
                File file = find.getSelectedFile();
                path = folder.toString();
                appname = file.toString();

                appfold = path.substring(0, path.lastIndexOf("\\"));
                javapack = path.substring(path.lastIndexOf("\\") + 1);
                appname = appname.substring(appname.lastIndexOf("\\") + 1, appname.lastIndexOf("."));
                icopath = icophoto.getText().substring(icophoto.getText().lastIndexOf("\\") + 1, icophoto.getText().lastIndexOf("."));


                try {
                    batch bat = new batch(appfold, javapack, appname, icopath);
                    System.exit(0);
                } catch (IOException ex) {
                    Logger.getLogger(ShortcutCreator.class.getName()).log(Level.SEVERE, null, ex);
                }
            }
        }

    }                                      

    private void findiconActionPerformed(java.awt.event.ActionEvent evt) {                                         

        JFileChooser findico = new JFileChooser();

        int foundit = findico.showOpenDialog(this);

        if (foundit == JFileChooser.APPROVE_OPTION) {
            File icon = findico.getSelectedFile();
            icophoto.setText(icon.toString());
        }
    }                                        

